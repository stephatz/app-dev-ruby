<br>
<div class="d-flex container-fluid justify-content-between">
  <div>
    <h3>
      <strong>
      My jobs
      </strong>
    </h3>
  </div>
  <div>
    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#createjobModal">Add job</button>
  </div>
</div>

<hr>

<div class="modal fade bd-example-modal-lg" id="createjobModal" tabindex="-1" aria-labelledby="createjob" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add a new job</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

    <form action="/insert_job" method="post">
      <div class="mb-3 form-group">
        <label for="job_title_box" class="col-sm-3 col-form-label">
          Job title
        </label>

        <input type="text" id="job_title_box" name="query_job_title">
      </div>

      <div class="mb-3 form-group">
        <label for="employer_box" class="col-sm-3 col-form-label">
          Employer
        </label>

        <input type="text" id="employer_box" name="query_employer">
      </div>


      <div class="mb-3 form-group">
        <label for="responsibilities_box" class="form-label mt-4">
          Responsibilities
        </label>

        <textarea type="text" class="form-control" id="responsibilities_box" name="query_responsibilities"
          rows="3"> </textarea>
      </div>

      <button class="btn btn-primary">
        Create job
      </button>
    </form>
      </div>
    </div>
  </div>
</div>

<div>
  <div class="container-fluid">
    <table class="table table-hover">
      <tr class="table-primary">

        <th scope="col">
          Job title
        </th>

        <th scope="col">
          Employer
        </th>

        <th scope="col">
        </th>
      </tr>

      <% @list_of_jobs.each do |a_job| %>
      <tr>
        <td>
          <a href="/jobs/<%= a_job.id %>">
          <%= a_job.job_title %>
          </a>
        </td>

        <td>
          <%= a_job.employer %>
        </td>

        <td>

        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
